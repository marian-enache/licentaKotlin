<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlOptions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="60dp"
    android:padding="5dp"
    android:background="@color/white">

    <Spinner
        android:id="@+id/spinnerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ivRotate"
        android:backgroundTint="@color/red_80_alpha" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/ivZoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_toLeftOf="@+id/ivDelete"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_zoom" />

    <ImageView
        android:id="@+id/ivRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_toLeftOf="@+id/ivZoom"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_rotate" />
</RelativeLayout>